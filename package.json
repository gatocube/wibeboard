{
    "name": "wibeboard",
    "version": "0.1.0",
    "type": "module",
    "description": "Interactive widget-based flow builder with customizable visual themes",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview --port 4173",
        "local": "pnpm build && pnpm preview",
        "lint": "eslint .",
        "test": "node packages/test-runner/bin/test-runner.mjs all --allow-missing-project",
        "test:scenario": "node packages/test-runner/bin/test-runner.mjs scenario",
        "test:e2e": "node packages/test-runner/bin/test-runner.mjs e2e --allow-missing-project",
        "test:integration": "TEST_INTEGRATION=1 npx playwright test"
    },
    "dependencies": {
        "@automerge/automerge": "^3.2.4",
        "@codemirror/commands": "^6.10.2",
        "@codemirror/lang-html": "^6.4.11",
        "@codemirror/lang-javascript": "^6.2.4",
        "@codemirror/lang-json": "^6.0.2",
        "@codemirror/lang-markdown": "^6.5.0",
        "@codemirror/lang-python": "^6.2.1",
        "@codemirror/lang-yaml": "^6.1.2",
        "@codemirror/language": "^6.12.2",
        "@codemirror/language-data": "^6.5.2",
        "@codemirror/lint": "^6.9.4",
        "@codemirror/state": "^6.5.4",
        "@codemirror/theme-one-dark": "^6.1.3",
        "@codemirror/view": "^6.39.15",
        "@xyflow/react": "^12.10.1",
        "bdx-swipe-menu": "github:gatocube/BdxSwipeMenu#v0.1.0",
        "elkjs": "^0.11.0",
        "framer-motion": "^12.34.3",
        "lucide-react": "^0.575.0",
        "mobx": "^6.15.0",
        "mobx-react-lite": "^4.1.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "vite-plugin-top-level-await": "^1.6.0",
        "vite-plugin-wasm": "^3.5.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@playwright/test": "^1.52.0",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.7",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^5.1.1",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "globals": "^16.5.0",
        "typescript": "~5.9.3",
